all: docker_run

docker_login:
	echo '$(DOCKERHUB_CREDENTIALS_PSW)' | docker login -u $(DOCKERHUB_CREDENTIALS_USR) --password-stdin

docker_pull:
	docker pull dhwe/appy:latest

docker_run: docker_pull
	docker run --health-cmd='curl -I http://172.17.0.2:5000 || echo 1' --health-timeout=5s --health-retries=3 --health-interval=60s -d -p 5000:5000 dhwe/appy:latest
