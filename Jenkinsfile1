pipeline {
    agent any
    options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    stages {
        stage('Build images') {
            steps {
                sh 'make build'
            }
        }
        stage('Push images to Dockerhub') {
            steps {
              withDockerRegistry([ credentialsId: "dockerhub", url: "https://hub.docker.com/repository/docker/dhwe/appy" ]) {
                sh 'make push'
              }
            }
        }
        stage('Clean') {
            steps {
                sh 'make clean'
            }
        }
    }
}
